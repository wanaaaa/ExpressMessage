<div class="row" class="border">
	<div class="col-sm-3 col-md-3"></div>
	<div class="col-sm-6 col-md-6 border">
			<h4 >Leave your question</h4>
			<form action="/messages/index" method="post" class="form-horizontal form-group" >
					<label for="author">Customer</label>
					<input name="message[author]" placeholder="name" id="author" class="form-control"></textarea>

					<label for="content">Question</label>
					<textarea name="message[content]" placeholder="Content" id="content" class="form-control"></textarea>

					<label for="Email">Email address</label>
					<input name="message[email]" placeholder="Email to send email" class="form-control" id="Email">

					<div class="hide">
						<h5>Comment</h5><label for="comment">Answer</label>
						<textarea name="message[comment]" placeholder="answer" class="form-control" id="comment"></textarea> 
					</div>

					<div class="submit">
						<input type="submit" value="submit"  ><br>
					</div>
		</form>

	</div>
</div><br>
